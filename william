import random
import os


def generate_deck():
    # Generates a shuffled deck with 26 zeros (black) and 26 ones (white).
    deck = [0] * 26 + [1] * 26
    random.shuffle(deck)
    return deck


def make_decks(files, decks, base_filename="deck"):

    total_size = 0
    
    for i in range(1, files + 1):
        
        random.seed(i)
        
        filename = f"{base_filename}_{i}.bin"

        # write *decks* number of decks into this file
        with open(filename, "wb") as f:
            for _ in range(decks):
                deck = generate_deck()
                f.write(bytes(deck))

        size_bytes = os.stat(filename).st_size
        total_size += size_bytes
        #print(f"Created {filename} ({size_bytes} bytes)")

    print(f"Total size across all files: {total_size} bytes")
    return total_size
